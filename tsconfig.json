{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"types": [
			"node",
			"webdriverio/async",
			"expect-webdriverio"
		],
		"paths": {
			"@pages/*": [
				"pageObj/*"
			],
			"@specs/*": [
				"specs/*"
			],
			"@support/*": [
				"support/*"
			]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test/**/*.js"
	]
}